{
  "name": "node-hooks",
  "version": "0.0.0",
  "preferGlobal": true,
  "description": "An NPM for git hooks.",
  "main": "hooks.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "colors": "~0.6.1",
    "read": "~1.0.1"
  },
  "devDependencies": {
    "mocha": "~1.12.0",
    "should": "1.2.2"
  },
  "scripts": {
    "test": "mocha",
    "try": "sudo npm uninstall -g node-hooks && sudo npm install -g --link",
    "postinstall": "./../../node_modules/.bin/hooks install",
    "preuninstall": "./../../node_modules/.bin/hooks uninstall"
  },
  "bin": {
    "hooks": "./bin/hooks.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mcwhittemore/node-hooks.git"
  },
  "keywords": [
    "git",
    "hooks"
  ],
  "author": "Matthew Chase Whittemore <mcwhittemore@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mcwhittemore/node-hooks/issues"
  }
}
