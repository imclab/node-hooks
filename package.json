{
  "name": "node-hooks",
  "version": "0.0.0",
  "preferGlobal": true,
  "description": "An NPM for git hooks.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "colors": "~0.6.1",
    "read": "~1.0.1"
  },
  "devDependencies": {
    "mocha": "~1.12.0",
    "should": "1.2.2",
    "valid-mocha-test": "https://github.com/mcwhittemore/valid-mocha-tests.hook/tarball/master"
  },
  "scripts": {
    "test": "mocha --reporter tap",
    "echo": "node bin/npm-cli.js",
    "try": "sudo npm uninstall -g node-hooks && sudo npm install -g --link",
    "install": "node install.js"
  },
  "hooks":{
    "pre-commit": ["valid-mocha-tests"]
  },
  "bin": {
    "hooks": "./hooks.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mcwhittemore/node-hooks.git"
  },
  "keywords": [
    "git",
    "hooks"
  ],
  "author": "Matthew Chase Whittemore <mcwhittemore@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mcwhittemore/node-hooks/issues"
  }
}
